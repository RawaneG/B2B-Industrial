{
  "permissions": {
    "allow": [
      "Bash(npm install:*)",
      "Bash(if exist package-lock.json del package-lock.json)",
      "Bash(if exist node_modules rmdir /s /q node_modules)",
      "Bash(npm view:*)",
      "Bash(npm run build:*)",
      "Bash(git init:*)",
      "Bash(git remote add:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(npm run dev:*)",
      "Bash(timeout /t 5 /nobreak)",
      "Bash(exit 0)",
      "Bash(dir:*)",
      "Bash(findstr:*)",
      "Bash(curl:*)",
      "Bash(cat:*)"
    ]
  }
}
